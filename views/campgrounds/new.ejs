                    <textarea class="form-control" rows="10" type="text" name="description" placeholder="Description"></textarea>
                </div><!-- form group -->
               <div class="form-group">    
                    <button class="btn btn-primary btn-block">Submit</button>
                </div><!-- form group -->
            </form>
            <a href="/campgrounds">< Go Back</a>
       </div><!-- inline styles -->


    </div><!--row-->
</div><!--container -->

